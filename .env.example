# Recon Bounty Stack - Environment Configuration
# Copy this file to .env and fill in your values

# API Keys (obtain from respective platforms)
HACKERONE_API_KEY=
BUGCROWD_API_KEY=
DISCORD_WEBHOOK_URL=

# Tool paths (if not in PATH)
NUCLEI_PATH=/usr/local/bin/nuclei
HTTPX_PATH=/usr/local/bin/httpx
SUBFINDER_PATH=/usr/local/bin/subfinder
AMASS_PATH=/usr/local/bin/amass
DNSX_PATH=/usr/local/bin/dnsx

# Configuration
LOG_LEVEL=INFO
OUTPUT_DIR=./output
MAX_CONCURRENT_SCANS=5

# Performance tuning (adjust based on your system)
SUBFINDER_THREADS=50
HTTPX_RATE_LIMIT=150
HTTPX_THREADS=100
NUCLEI_RATE_LIMIT=150
NUCLEI_THREADS=50

# Scanning preferences
NUCLEI_SEVERITY=medium,high,critical
TRIAGE_MIN_SEVERITY=medium

# Authorization directory
AUTH_DIR=./authorizations
