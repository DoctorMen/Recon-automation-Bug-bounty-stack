    },
    {
      "name": "IDOR Testing",
      "item": [
        {
          "name": "List Customers",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{rapyd_api_key}}",
                "type": "text"
              },
              {
                "key": "X-Bugcrowd",
                "value": "{{bugcrowd_header}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{rapyd_base_url}}/v1/customers?limit=10",
              "host": ["{{rapyd_base_url}}"],
              "path": ["v1", "customers"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            },
            "description": "List your customers to get customer IDs for IDOR testing"
          }
        },
        {
          "name": "Test IDOR - Access Other Customer",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{rapyd_api_key}}",
                "type": "text"
              },
              {
                "key": "X-Bugcrowd",
                "value": "{{bugcrowd_header}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{rapyd_base_url}}/v1/customers/CUSTOMER_ID_HERE",
              "host": ["{{rapyd_base_url}}"],
              "path": ["v1", "customers", "CUSTOMER_ID_HERE"]
            },
            "description": "Replace CUSTOMER_ID_HERE with another user's customer ID to test IDOR"
          }
        },
        {
          "name": "List Payments",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{rapyd_api_key}}",
                "type": "text"
              },
              {
                "key": "X-Bugcrowd",
                "value": "{{bugcrowd_header}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{rapyd_base_url}}/v1/payments?limit=10",
              "host": ["{{rapyd_base_url}}"],
              "path": ["v1", "payments"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Test IDOR - Access Other Payment",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{rapyd_api_key}}",
                "type": "text"
              },
              {
                "key": "X-Bugcrowd",
                "value": "{{bugcrowd_header}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{rapyd_base_url}}/v1/payments/PAYMENT_ID_HERE",
              "host": ["{{rapyd_base_url}}"],
              "path": ["v1", "payments", "PAYMENT_ID_HERE"]
            }
          }
        }
      ]
    },
    {
      "name": "Refund Testing",
      "item": [
