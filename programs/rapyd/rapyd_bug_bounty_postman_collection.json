{
  "info": {
    "name": "Rapyd Bug Bounty Testing",
    "description": "Postman collection for Rapyd bug bounty testing",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "rapyd_base_url",
      "value": "https://sandboxapi.rapyd.net",
      "type": "string"
    },
    {
      "key": "rapyd_api_key",
      "value": "YOUR_API_KEY_HERE",
      "type": "string"
    },
    {
      "key": "rapyd_secret_key",
      "value": "YOUR_SECRET_KEY_HERE",
      "type": "string"
    },
    {
      "key": "bugcrowd_header",
      "value": "Bugcrowd-DoctorMen",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication Testing",
      "item": [
        {
          "name": "Test - No Authorization Header",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-Bugcrowd",
                "value": "{{bugcrowd_header}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 100,\n  \"currency\": \"USD\",\n  \"payment_method\": \"bank_transfer\"\n}"
            },
            "url": {
              "raw": "{{rapyd_base_url}}/v1/payments/create",
              "host": ["{{rapyd_base_url}}"],
              "path": ["v1", "payments", "create"]
            },
            "description": "Test if endpoint accepts requests without authorization header"
          }
        },
        {
          "name": "Test - Invalid Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer invalid_token_here",
                "type": "text"
              },
              {
                "key": "X-Bugcrowd",
                "value": "{{bugcrowd_header}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 100,\n  \"currency\": \"USD\"\n}"
            },
            "url": {
              "raw": "{{rapyd_base_url}}/v1/payments/create",
              "host": ["{{rapyd_base_url}}"],
              "path": ["v1", "payments", "create"]
            }
          }
        },
        {
          "name": "Test - Missing Bearer Prefix",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "YOUR_TOKEN_HERE",
                "type": "text",
                "description": "Token without Bearer prefix"
              },
              {
                "key": "X-Bugcrowd",
                "value": "{{bugcrowd_header}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 100,\n  \"currency\": \"USD\"\n}"
            },
            "url": {
              "raw": "{{rapyd_base_url}}/v1/payments/create",
              "host": ["{{rapyd_base_url}}"],
              "path": ["v1", "payments", "create"]
            }
          }
        }
      ]
    },
