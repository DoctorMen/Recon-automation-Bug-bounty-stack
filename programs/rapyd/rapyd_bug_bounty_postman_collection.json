            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 200\n}"
            },
            "url": {
              "raw": "{{rapyd_base_url}}/v1/payments/PAYMENT_ID_HERE/refund",
              "host": ["{{rapyd_base_url}}"],
              "path": ["v1", "payments", "PAYMENT_ID_HERE", "refund"]
            },
            "description": "Test if you can refund more than the original payment amount"
          }
