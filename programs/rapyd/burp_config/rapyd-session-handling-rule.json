{
  "type": "burp_session_handling_rule",
  "name": "Rapyd X-Bugcrowd Header",
  "description": "Automatically adds X-Bugcrowd header to all requests in scope",
  "enabled": true,
  "rule_actions": [
    {
      "type": "add_header",
      "header_name": "X-Bugcrowd",
      "header_value": "Bugcrowd-DoctorMen"
    }
  ],
  "rule_conditions": [
    {
      "type": "url_is_in_scope",
      "operator": "or"
    }
  ],
  "scope": {
    "tools": [
      "proxy",
      "repeater",
      "intruder",
      "scanner"
    ],
    "url_scope": {
      "include": [
        "https://sandboxapi.rapyd.net",
        "https://api.rapyd.net",
        "https://dashboard.rapyd.net",
        "https://verify.rapyd.net",
        "https://checkout.rapyd.net"
      ]
    }
  }
}

