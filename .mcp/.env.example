# MCP Deployment Servers - Environment Variables
# Copy this file to .env and fill in your actual tokens
# NEVER commit .env to Git!

# ============================================
# NETLIFY
# ============================================
# Get token: https://app.netlify.com/user/applications
NETLIFY_AUTH_TOKEN=your_netlify_token_here

# ============================================
# VERCEL
# ============================================
# Get token: https://vercel.com/account/tokens
VERCEL_TOKEN=your_vercel_token_here

# ============================================
# AWS
# ============================================
# Get credentials: AWS IAM Console
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1

# ============================================
# DIGITALOCEAN
# ============================================
# Get token: https://cloud.digitalocean.com/account/api/tokens
DO_TOKEN=your_digitalocean_token_here

# ============================================
# GITHUB
# ============================================
# Get token: https://github.com/settings/tokens
# Scopes needed: repo, workflow
GITHUB_TOKEN=your_github_token_here

# ============================================
# CLOUDFLARE
# ============================================
# Get token: https://dash.cloudflare.com/profile/api-tokens
CLOUDFLARE_API_TOKEN=your_cloudflare_token_here

# ============================================
# RAILWAY
# ============================================
# Get token: https://railway.app/account/tokens
RAILWAY_TOKEN=your_railway_token_here

# ============================================
# RENDER
# ============================================
# Get key: https://dashboard.render.com/account/api-keys
RENDER_API_KEY=your_render_key_here

# ============================================
# FLY.IO
# ============================================
# Get token: fly auth token
FLY_API_TOKEN=your_fly_token_here

# ============================================
# HEROKU
# ============================================
# Get key: https://dashboard.heroku.com/account
HEROKU_API_KEY=your_heroku_key_here

# ============================================
# KUBERNETES (Optional)
# ============================================
# Path to your kubeconfig file
KUBECONFIG=/path/to/your/kubeconfig

# ============================================
# CUSTOM DOMAINS (Optional)
# ============================================
PARALLELPROFIT_DOMAIN=parallelprofit.com
WORKTREEMANAGER_DOMAIN=worktreemanager.com
JOBMATCH_DOMAIN=jobmatch.io

# ============================================
# MONITORING (Optional)
# ============================================
# Sentry for error tracking
SENTRY_DSN=your_sentry_dsn_here

# LogRocket for session replay
LOGROCKET_APP_ID=your_logrocket_id_here

# Google Analytics
GA_TRACKING_ID=your_ga_id_here
